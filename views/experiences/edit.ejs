<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= experience.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/experiences/<%= experience._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="experience[name]" value="<%= experience.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="experience[rank]" value="<%= experience.rank %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="experience[image]" value="<%= experience.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="experience[description]" value="<%= experience.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/experiences">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

