<% include ../partials/header %> 

<div class="container">
    <header class="jumbotron">
        <div class="container">
             <h2>Welcome To the Heliotrope Experience Portal</h2>
             <p>View our hand-picked experiences from all over the Pacific Northwest</p>
             <p>
                <a class="btn btn-primary btn-large" href="/experiences/new">Add New Experience</a>
             </p>
        </div>
    </header>

    <div class="row text-center" id="campground-grid">
         <% campgrounds.forEach(function(campground) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                        <a href="/experiences/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
     
</div>

<% include ../partials/footer %>
